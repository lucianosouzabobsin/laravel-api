{
    "version": "0.2.0",
    "configurations": [
		{
            "name": "Listen for XDebug: LOCAL",
            "type": "php",
            "request": "launch",
            "hostname": "0.0.0.0",
            "port": 9003,
            "log": true,
            "pathMappings": {
                "/var/www/html":"${workspaceFolder}",
            },
            "xdebugSettings": {
                "max_data": 10000,
                "show_hidden": 1,
                "max_children": 10000
            },
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}